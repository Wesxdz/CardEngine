<Page x:Class="CardApp.GoFishPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CardApp"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="GoFishPage">

    <Grid Background="LightSlateGray"> 
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Grid.Column="1" Background="Green">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="8*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Name="btnGFBack" Content="Back" Click="btnGFBack_Click" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Height="30" Margin="31.333,10,30,10" Width="94" />
            <Label Name="lblDeckGoesHere" Content="Deck Goes Here!" Grid.Column="0" Grid.Row="1" Margin="317,95,193.667,10"/>
            <Label Name="lblHelperText" Content="Helper Text!" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Center"/>
        </Grid>

        <Label Name="lblPlayerScore" Content="Score: 0" Grid.Column="2" Grid.Row="2"/>
        <Button Name="btnAskLeftPlayer" Grid.Row="1" Grid.Column="0" Content="Ask this Player" VerticalAlignment="Center" HorizontalAlignment="Right" Click="btnAskLeftPlayer_Click"/>
        <Button Name="btnAskRightPlayer" Grid.Row="1" Grid.Column="2" Content="Ask this Player" VerticalAlignment="Center" HorizontalAlignment="left" Click="btnAskRightPlayer_Click"/>
        <Button Name="btnAskTopPlayer" Grid.Row="0" Grid.Column="1" Content="Ask this Player" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="btnAskTopPlayer_Click"/>
    </Grid>
</Page>
